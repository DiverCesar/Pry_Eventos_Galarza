function cargarURL(elem) {
  const label = document.getElementById('websiteLabel');
  if (elem.value) {
    elem.classList.remove('is-invalid');
    label.innerText = `P√°gina web: ${elem.value}`;
  } else {
    label.innerText = 'P√°gina web';
  }
}

function validarURL(elem) {
  const label = document.getElementById('websiteLabel');
  const url = elem.value.trim();

  // Limpio estado previo
  elem.classList.remove('is-invalid');
  label.classList.remove('text-danger', 'text-success');

  // 1) Validaci√≥n m√≠nima de esquema
  if (!url.startsWith('http://') && !url.startsWith('https://')) {
    elem.classList.add('is-invalid');
    label.innerText = `URL inv√°lida: ${url}`;
    label.classList.add('text-danger');
    return;
  }

  // 2) Intentar obtener el t√≠tulo de la p√°gina
  fetch(url)
    .then(response => response.text())
    .then(html => {
      // Parseamos el HTML y extraemos <title>
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const title = doc.querySelector('title')?.innerText || 'Sin t√≠tulo';

      // Actualizamos el label con el t√≠tulo y estilo
      label.innerText = `P√°gina web: ${title}`;
      label.classList.add('text-success');
    })
    .catch(() => {
      // Si falla el fetch o hay CORS, al menos marcamos error
      elem.classList.add('is-invalid');
      label.innerText = `No se pudo cargar: ${url}`;
      label.classList.add('text-danger');
    });
}


